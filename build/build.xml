<?xml version="1.0" encoding="UTF-8"?>
	<project name="cspd" default="do-deploy" basedir="."  xmlns:fx="javafx:com.sun.javafx.tools.ant">
	<target name="init-fx-tasks">
		<path id="fxant">
			<filelist>
				<file name="${java.home}\..\lib\ant-javafx.jar"/>
				<file name="${java.home}\lib\jfxrt.jar"/>
			</filelist>
		</path>
	
		<taskdef resource="com/sun/javafx/tools/ant/antlib.xml"
			uri="javafx:com.sun.javafx.tools.ant"
			classpathref="fxant"/>
	</target>
	<target name="setup-staging-area">
		<delete dir="externalLibs" />
		<delete dir="project" />
		<delete dir="projectRefs" />
	
		<mkdir dir="externalLibs" />
	
		<copy todir="externalLibs">
			<fileset dir="E:\mywork\omni-dms-impl\src\lib">
				<filename name="dmsapiSV.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\mabuodeh-pc\.m2\repository\junit\junit\4.12">
				<filename name="junit-4.12.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="E:\mywork\omni-dms-impl\src\lib">
				<filename name="nsms.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="E:\mywork\omni-dms-impl\src\lib">
				<filename name="ISPack.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\mabuodeh-pc\.m2\repository\org\hamcrest\hamcrest-core\1.3">
				<filename name="hamcrest-core-1.3.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="E:\mywork\omni-dms-impl\src\lib">
				<filename name="jdts.jar"/>
			</fileset>
		</copy>
	
		<mkdir dir="project" />
		<copy todir="project">
			<fileset dir="E:\mywork\cspd">
				<include name="src/**" />
			</fileset>
		</copy>
	
		<mkdir dir="projectRefs" />
		<copy todir="projectRefs">
			<fileset dir="E:\mywork">
				<include name="dms-api\src/**" />
			</fileset>
		</copy>
		<copy todir="projectRefs">
			<fileset dir="E:\mywork">
				<include name="omni-dms-impl\src/**" />
			</fileset>
		</copy>
		<copy todir="projectRefs">
			<fileset dir="E:\mywork">
				<include name="omni-dms-impl\test/**" />
			</fileset>
		</copy>
	</target>
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />
	
		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="nsms.jar"/>
				<include name="ISPack.jar"/>
				<include name="dmsapiSV.jar"/>
				<include name="jdts.jar"/>
				<include name="junit-4.12.jar"/>
				<include name="hamcrest-core-1.3.jar"/>
			</fileset>
		</copy>
	
		<!-- Copy project references -->
		<copy todir="build/src">
			<fileset dir="projectRefs/omni-dms-impl/src">
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy todir="build/src">
			<fileset dir="projectRefs/dms-api/src">
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy todir="build/src">
			<fileset dir="projectRefs/omni-dms-impl/test">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<javac includeantruntime="false" source="1.8" target="1.8" srcdir="build/src" destdir="build/classes" encoding="Cp1252">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
			</classpath>
		</javac>
	
		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
		<fileset dir="project/src">
			<exclude name="**/*.java"/>
		</fileset>
		</copy>
	
		<copy todir="build/classes">
			<fileset dir="projectRefs/omni-dms-impl/src">
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
		<copy todir="build/classes">
			<fileset dir="projectRefs/dms-api/src">
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
		<copy todir="build/classes">
			<fileset dir="projectRefs/omni-dms-impl/test">
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
	
	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
	
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
	
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
	
	
		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="cspd.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
		</fx:resources>
	
		<fx:application id="fxApplication"
			name="fdqq"
			mainClass="cspd.CSPDApplication"
			toolkit="fx"
		/>
	
		<mkdir dir="build/classes/META-INF" />
	
	
	
		<fx:jar destfile="dist/cspd.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
	
			<manifest>
				<attribute name="Implementation-Vendor" value="eh"/>
				<attribute name="Implementation-Title" value="fdqq"/>
				<attribute name="Implementation-Version" value="2"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
	
	
		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			embedJNLP="false"
			extension="false"
			includeDT="false"
			offlineAllowed="true"
			outdir="${basedir}/deploy"
			outfile="cspd" nativeBundles="exe"
			updatemode="background" >
	
			<fx:platform basedir="${java.home}"/>
			<fx:info title="cspd" vendor="eh"/>
	
			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
		</fx:deploy>
	
		<fx:csstobin outdir="build/classes">
			<fileset dir="build/classes" includes="**/*.css"/>
		</fx:csstobin>
	
	</target>
</project>
